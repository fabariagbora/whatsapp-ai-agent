# Webhook server port (Render sets PORT automatically, but keep for local dev)
PORT=3000

# Evolution API connection (the one you deployed separately)
EVOLUTION_BASE_URL=https://whatsapp-ai-agent-7yq4.onrender.com
EVOLUTION_API_KEY=supersecretkey

# Database (Render Postgres)
DATABASE_URL=postgres://username:password@host:5432/dbname

# (Optional) Upstash Redis if you later add caching / queues
CACHE_REDIS_URI=rediss://default:password@your-upstash-url:6379

# OpenRouter (AI model provider)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_API_URL=https://api.openrouter.ai/v1/chat/completions

# Google service account for Sheets
# (take the service account JSON, base64 encode it, paste here)
GOOGLE_SERVICE_ACCOUNT_JSON_BASE64=eyJ0eXAiOiJKV1QiLCJhbGci...

# Spreadsheet ID from Google Sheets URL
# Example sheet URL: https://docs.google.com/spreadsheets/d/1AbCdEfGhIjKlMnOpQrStUvWxYz1234567890/edit
# ID is the part after /d/ and before /edit
GOOGLE_SPREADSHEET_ID=1AbCdEfGhIjKlMnOpQrStUvWxYz1234567890

# Sales team WhatsApp (gets lead summary)
SALES_INSTANCE_NAME=my-instance
SALES_WHATSAPP_NUMBER=2348012345678
